- content_for(:title, 'Login')

%div{ :class => "container login"}
  .row
    .session-form
      .title-area
        %h1 Sign in
      .area
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
          .control-group= f.input :email, :required => false, :autofocus => true, :class => 'input-xlarge', :placeholder => 'Email'
          .control-group= f.input :password, :required => false, :placeholder => 'Password', :class => 'input-xlarge'
          .control-group= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
          = f.button :submit, 'Login', :class => 'btn btn-primary'
        = render :partial => "devise/shared/links"
