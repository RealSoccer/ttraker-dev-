- content_for(:title, "#{@project.name} - New User")
.row
  .span2
    = render :partial => "shared/sidebar"
  .span9
    .title-area
      %h1= "Add #{@project.name} User"
    .area
      = simple_form_for(@project_user, :url => project_users_path(@project), :html => { :class => 'form-horizontal' }) do |f|
        = f.input :user_id, :required => true, :collection => @available_users, :selected => @available_users[0], :include_blank => false, :label => 'User'
        = f.button :submit, "Add User", :class => 'btn btn-primary'
        = link_to "Back", project_path(@project), :class => 'btn'
      %p= link_to "Can't find the user? Make sure they are added to your company.", new_company_user_path