- content_for(:title, 'Edit Task')
.row
  .span2
    = render :partial => "shared/sidebar"
  .span9
    .title-area
      %h1 Edit Your Task
    .area
      = simple_form_for(@task, :url => @task, :html => {:class => 'form-horizontal' }) do |f|
        .control-group= f.input :project_id, :required => true, :collection => @available_projects, :selected => @task.project.id, :include_blank => false, :label => 'Project'
        .control-group= f.input :name, :required => true, :autofocus => true, :class => 'input-xlarge', :label => 'Task Name'
        .control-group= f.input :billable, :class => 'input-xlarge'
        .control-group= f.input :rate, :class => 'input-xlarge'
        = f.button :submit, "Update", :class => 'btn btn-primary'